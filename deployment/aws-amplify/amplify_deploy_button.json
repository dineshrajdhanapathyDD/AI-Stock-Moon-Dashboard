{
  "name": "Stock Moon Dashboard",
  "description": "Analyze relationships between stock prices and moon phases with interactive visualizations and statistical analysis.",
  "repository": "https://github.com/dineshrajdhanapathyDD/stock",
  "framework": "Python",
  "category": "Analytics",
  "tags": ["python", "dash", "plotly", "finance", "analytics", "stocks", "moon-phases"],
  "buildSpec": {
    "version": 1,
    "applications": [
      {
        "backend": {
          "phases": {
            "preBuild": {
              "commands": [
                "yum update -y",
                "yum install -y python3 python3-pip python3-devel gcc",
                "python3 -m pip install --upgrade pip setuptools wheel",
                "python3 -m pip install -r requirements.txt --no-cache-dir"
              ]
            },
            "build": {
              "commands": [
                "python3 -c \"from src.stock_database import stock_db; print('Stock database loaded:', len(stock_db.stocks), 'stocks')\"",
                "python3 -c \"from src.dashboard import app; print('Dashboard application ready')\"",
                "python3 test_complete_system.py"
              ]
            },
            "postBuild": {
              "commands": [
                "echo 'Production configuration complete'"
              ]
            }
          },
          "artifacts": {
            "baseDirectory": "/",
            "files": ["**/*"]
          }
        }
      }
    ]
  },
  "environmentVariables": {
    "PYTHONPATH": "/opt/python:/opt/python/lib/python3.9/site-packages",
    "PORT": "8050",
    "DASH_DEBUG": "False",
    "DASH_HOST": "0.0.0.0",
    "DASH_COMPRESS": "True",
    "DASH_SERVE_LOCALLY": "False"
  },
  "customHeaders": [
    {
      "pattern": "**/*",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains"
        }
      ]
    }
  ]
}